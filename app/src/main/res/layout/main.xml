<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent"
        android:background="@android:color/holo_orange_light"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Student management" />

    <Button
        android:id="@+id/btn_qlsv"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:onClick="openQLSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quan ly sinh vien" />

    <Button
        android:id="@+id/btn_qllop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:onClick="openQLL"
        android:text="Quan ly lop hoc" />

    <Button
        android:id="@+id/btn_gan"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Gan sinh vien" />
</LinearLayout>